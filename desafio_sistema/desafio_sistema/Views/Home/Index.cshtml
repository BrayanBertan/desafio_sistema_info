}
@section scripts{

    <script src="~/js/angular.min.js"></script>
    <script src="~/AngularController/HomeAngularJS.js"></script>

}

<div class="container container-login" ng-app="Homeapp" ng-controller="AngularController">
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div class="row-sm-4">
           <img src="~/imagens/usuario.png" class="mx-auto d-block imagemLogin" asp-append-version="true" />  
        <form>
            <div class="form-group">
                <label for="usuario">Usuario</label>
                <input type="text" class="form-control" id="usuario"  placeholder="Usuario" ng-model="usuario">
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="senha"  placeholder="Senha" ng-model="senha">
            </div>
            <button  class="btn btn-primary btnLogin btn-lg float-end"  ng-click="verificaLogin()">Entrar</button>
        </form>
        </div>
    </div>
    <div class="col-sm-3">
    </div>
  </div>
</div>
