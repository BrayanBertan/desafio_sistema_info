@{
    ViewData["Title"] = "Home Page";
}


<div class="container container-login">
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div class="row-sm-4">
           <img src="~/imagens/usuario.png" class="mx-auto d-block imagemLogin" asp-append-version="true" />  
        <form>
            <div class="form-group">
                <label for="usuario">Usuario</label>
                <input type="text" class="form-control" id="usuario"  placeholder="Usuario">
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="text" class="form-control" id="senha"  placeholder="Senha">
            </div>
            <button type="submit" class="btn btn-primary btnLogin btn-lg float-end">Cadastrar</button>
        </form>
        </div>
    </div>
    <div class="col-sm-3">
    </div>
  </div>
</div>
